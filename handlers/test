const notifier = require('node-notifier');

const fn = (payload) => {
	notifier.notify({
		title: `Cabal :: ${payload.meta.action}`,
		message: `${payload.meta.from} says ${payload.body.msg}`
	});
};

const payload = `
{
	"meta": {
		"none": "cddb3fd4-70f2-4729-ba52-52c34001cdeb",
		"sig": "BqZPfuNGOzI1/XHh7B0fKg",
		"action": "everybody-else",
		"from": "kyle"
	},
	"body": {
		"msg": "poop"
	}
}
`;

fn( JSON.parse(payload) );

[Unit]
Description=Serf Agent for %i
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/.config/serf
ExecStart=/usr/bin/serf agent -config-dir=%h/.config/serf/config.d -keyring-file=%h/.config/serf/key/ring.json
ExecReload=/bin/kill -HUP $MAINPID

KillSignal=SIGINT
Restart=always
RestartSec=10

[Install]
WantedBy=default.target
Alias=cabal
